@model MProjectWeb.ViewModels.usuarios
<link href='https://fonts.googleapis.com/css?family=Playfair+Display&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
<div class="modal fade" id="modal_log" role="dialog">
    <div class="modal-dialog" style="width:800px; margin-top:10%; align-items:center;">
        <div class="modal-content">
            <div class="modal-body" style="padding:5px 5px; height:330px;">

                <div style="margin-top:10px;margin-right:20px">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div style="margin-top:20px;width:auto">
                    <div class="col-md-7">
                        <div class="col-md-11">

                            <div style="position:relative;margin-top:15%;color:cadetblue">
                                <h1 style="font-size:60px;">Mproject</h1>
                                <p style="font-size:20px;color:gray;margin-top:-15px">Login</p>
                            </div>

                            <div style="position:relative;width:300px;margin-left:10%;margin-top:20px;text-align:center">
                                <p>Crea una cuenta en MProject para gestionar tus proyectos</p>
                            </div>

                        </div>
                        <div class="col-md-1 po">
                        </div>
                    </div>
                    <div class="col-md-5" style="margin-top:70px">
                        <!-- ------------------------------------------------------------------ -->
                        <!-- ------------------------------------------------------------------ -->
                        <form asp-controller="Account" 
                              asp-action="Login" 
                              method="post" 
                              class="form-inline">
                            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                            <div class="grp">
                                <label asp-for="e_mail" class="lab"></label>
                                <input asp-for="e_mail" class="reg" />
                            </div>
                            <div class="grp">
                                <label asp-for="pass" class="lab"></label>
                                <input asp-for="pass" class="reg" />
                            </div>
                            <input type="submit" value="Login" class="reg">
                        </form>
                        <!-- ------------------------------------------------------------------ -->
                        <!-- ------------------------------------------------------------------ -->
                    </div>
                </div>
                
                <div style="position:relative; margin-top:30%;margin-left:20px;text-align:left;font-size:12px">
                    
                    <p>No estas registrado? <a href="#" class="btn_reg">Registrate!!</a></p>
                    <p style="margin-top:-10px">Olvidaste tu <a href="#">Password?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

